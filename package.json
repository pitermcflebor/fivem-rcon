{
  "name": "fivem-rcon",
  "displayName": "%extension.name%",
  "publisher": "PiterMcFlebor",
  "description": "%extension.description%",
  "repository": {
    "type": "git",
    "url": "https://github.com/PiterMcFlebor/fivem-rcon.git"
  },
  "license": "MIT",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fivem-rcon.configure",
        "title": "%command.configure.title%"
      },
      {
        "command": "fivem-rcon.connect",
        "title": "%command.connect.title%"
      },
      {
        "command": "fivem-rcon.disconnect",
        "title": "%command.disconnect.title%"
      },
      {
        "command": "fivem-rcon.sendCommand",
        "title": "%command.sendCommand.title%"
      },
      {
        "command": "fivem-rcon.testUdp",
        "title": "%command.testUdp.title%"
      },
      {
        "command": "fivem-rcon.restartResource",
        "title": "%command.restartResource.title%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "fivem-rcon.restartResource",
          "when": "resourceFilename == fxmanifest.lua",
          "group": "fivem@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.36.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  }
}
